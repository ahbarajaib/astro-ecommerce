---
export interface Props {
  title: string;
  image: string;
  price: number;
}
const { title, image, price } = Astro.props;
const formattedPrice = price.toLocaleString('en-US')
---

<div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow flex flex-col">
    <a href="#" class="flex justify-center items-center h-72">
        <img class="object-contain max-h-48" src={image} alt={title} />
    </a>
    <div class="flex flex-col items-center justify-between flex-grow px-5 pb-5">
        <h5 class="text-xl font-semibold tracking-tight text-gray-900 text-center">{title}</h5>
        <span class="text-2xl font-bold text-gray-900 text-center mt-4">AED {formattedPrice}</span>
        <a href="#" class="w-full mt-auto text-white bg-red-900 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mt-8">
            Add to cart
        </a>
    </div>
</div>
